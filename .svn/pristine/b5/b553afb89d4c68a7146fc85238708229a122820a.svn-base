/* pages/lipeiInfo/index.wxss */
page{
  width: 100%;
  height: 100%;
}
.AnLiImg{
  width: 100%;
  height: 400rpx;
}
.AnLiText{
  width: 100%;
  height: 400rpx;
  text-indent: 24rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.tishi{
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #1AAD16;
}
form>view{
  color: #1AAD16;
}
.userName, .userPhone{
  margin-top: 20rpx;
}
input{
  border-bottom: 1px solid #1AAD16;
  margin: 20rpx 0;
  box-sizing: border-box;
  padding-left: 20rpx;
  height: 60rpx;
}
button{
  margin-bottom: 20rpx;
}
.containers{
  width: 100%;
  height: 350rpx;
  position: relative;
  margin-top: 20rpx;
}
.topTime{
  position: absolute;
  top: 0;
  width: 100%;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
}
.topTime::after{
  content: '';
  display: block;
  width: 70%;
  height: 100rpx;
  background: #ccc;
  position: absolute;
  top: 0rpx;
  left: 15%;
  z-index: -1;
  transform: skewX(-18deg);
}
.bottomCont{
  width: 100%;
  height: 300rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding-top: 30rpx;
  background: #f3f3f3;
  font-size: 28rpx;
}
.leftImg{
  width: 90%;
  height: 240rpx;
  float: left;
  margin-left: 5%;
}
.leftImg>image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.rightJS{
  width:90%;
  height: 60rpx;
  line-height: 60rpx;
  position:absolute;
  bottom:32rpx;
  left:5%;
  background:rgba(217, 139, 23, .5);
}
.rightJS>view{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 32rpx;
  color: #fff;
}