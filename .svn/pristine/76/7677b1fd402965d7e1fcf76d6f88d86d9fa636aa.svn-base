/* pages/meirong/index.wxss */
page{
  width: 100%;
  height: 100%;
}
swiper{
  width: 100%;
  height: 300rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.huodong{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-top: 10rpx;
}
.huodong>view{
  width: 19%;
  height: 120rpx;
  margin-bottom: 10rpx;
  /* background: red; */
}
.content{
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
}
.content>image{
  width: 200rpx;
  height: 200rpx;
  background: pink;
}
.content>.rightCnt{
  float: right;
  width: calc(100% - 220rpx);
  height: 200rpx;
  /* background: yellow; */
}
.fG{
  height: 80rpx;
  width: 100%;
  background: #f3f3f3;
  margin-bottom: 20rpx;
}
.mD{
  padding: 0rpx 20rpx;
}
.mD>view{
  width: 100%;
  height: 200rpx;
  /* background: greenyellow; */
  margin-bottom: 10rpx;
  align-self: center;
}
.hD{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 20rpx;
}
.hD>text{
  margin-top: 8rpx;
}
.hD>image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: yellow;
  display: inline-block;
}
.bodyPf>image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 4rpx;
}
.rightCnt{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.bodyPf{
  font-size: 26rpx;
  color: #ccc;
}
.bottomDw{
  font-size: 24rpx;
}
.bottomDw>text:last-child{
  float: right;
  margin-right: 20rpx;
}
.pinfen{
  color: #000;
  margin-right: 20rpx;
}
.shangjia{
  width: 500rpx;
  height: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}
.shangjia>image{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.shangjia>text{
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #1296db;
}