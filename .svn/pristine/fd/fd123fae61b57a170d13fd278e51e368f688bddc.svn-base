/* pages/login/index.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
}
.header{
  width: 100%;
  height: 200rpx;
  position: relative;
  top: 200rpx;
}
.header>image{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: calc(50% - 100rpx);
}
.login{
  width: 100%;
  position: absolute;
  top: 500rpx;
}
.login>label{
  width: 100%;
  height: 1.4rem;
  line-height: 1.4rem;
  display: block;
  margin-bottom: 40rpx;
  padding: 0rpx 0rpx 0rpx 40rpx;
}
.inputBox{
  display: inline-block;
  width: calc(100% - 200rpx);
  height: 60rpx;
  border: 1rpx solid #ccc;
}
.inputBox>input{
  display: inline-block;
  width: calc(100% - 60rpx);
  height: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.login>label>text{
  position: relative;
  top: -17rpx;
  margin-right: 20rpx;
}
.inputBox>icon{
  position: relative;
  top: -4rpx;
  width: 60rpx;
  float: right;
  box-sizing: border-box;
  padding: 16rpx 10rpx;
}
.loginBtn{
  width: 60%;
  height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  line-height: 80rpx;
  background: #ec7c03;
  margin: 100rpx auto 0rpx;
  color: #fff;
  letter-spacing: 100rpx;
  text-indent: 100rpx;
}