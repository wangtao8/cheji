/* pages/index/index.wxss */
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.bgImage{
  width: 100%;
  height: 900rpx;
  position: fixed;
  top: -200rpx;
  left: 0;
}
.head-image {
  width: 100%;
  margin-top: calc(16% + 140rpx);
  height: calc(50% - 120rpx);
  position: fixed;
  /* background:#f3f3f3; */
}
.photos{
  width: 144rpx;
  height: 144rpx;
  position: fixed;
  left: calc(50% - 76rpx);
  top: 338rpx;
  z-index: 999;
  border-radius: 77rpx;
  border: 1rpx solid rgba(0,0,0,.5);
  box-shadow: 4rpx 4rpx 28rpx 6rpx rgba(0,0,0,1);
  vertical-align: middle;
}
.head-image>image{
  width: 300rpx;
  height: 300rpx;
  /* position: absolute; */
  left: calc(50% - 150rpx);
  top: -15rpx;
  margin: 0 auto;
  display: block;
  opacity: 0.6;
  
  /* border-radius: 36rpx; */
}
.head-image>text{
  display: block;
  width: 152rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(0,0,0,0.5);
  color: rgba(225,225,225,1);
  padding: 4rpx 10rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 20rpx auto;
  /* position: absolute; */
  left: calc(50% - 86rpx);
  bottom: 20%;
}

.classification {
  width: 100%;
  height: 33%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  /* background: #f3f3f3; */
  padding-bottom: 10rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  /* top: 34rpx; */
}
.font-infor>image{
  width: 100rpx;
  height: 100rpx;
}
.font-infor>view:nth-child(2){
  font-family: fantasy;
  font-weight: bold;
  color: #fff;
}
.classification>view {
  width: 24%;
  height: 170rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
  position: relative;
  /* background: #f3f3f3; */
}

.classification>view>image {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: calc(50% - 40rpx);
  top: 20rpx;
}

.classification>view>text {
  display: block;
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
}

.font-infor {
  position: fixed;
  top: 18rpx;
  left: 0rpx;
  width: 100%;
  height: calc(16% + 20rpx);
  text-align: center;
  /* background:#fff; */
  /* padding-top: 100rpx; */
}

.font-infor>view:nth-child(1) {
  font-size: 58rpx;
  color: #ff6347;
  padding-top: 50rpx;
  margin-bottom: 30rpx;
}

.font-infor>view:last-child {
  font-size: 28rpx;
  color: #fff;
}
