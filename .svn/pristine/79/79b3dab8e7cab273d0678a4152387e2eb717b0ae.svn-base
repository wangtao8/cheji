/* pages/meirong/index.wxss */
page{
  width: 100%;
  height: 100%;
}
swiper{
  width: 100%;
  height: 300rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.huodong{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-top: 10rpx;
}
.huodong>view{
  width: 19%;
  height: 120rpx;
  margin-bottom: 10rpx;
  /* background: red; */
}
.content{
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
}
.content>image{
  width: 200rpx;
  height: 200rpx;
  background: pink;
}
.content>.rightCnt{
  float: right;
  width: calc(100% - 220rpx);
  height: 200rpx;
  /* background: yellow; */
}
.fG{
  height: 80rpx;
  width: 100%;
  background: #f3f3f3;
  margin-bottom: 20rpx;
}
.mD{
  padding: 0rpx 20rpx;
}
.mD>view{
  width: 100%;
  height: 200rpx;
  /* background: greenyellow; */
  margin-bottom: 10rpx;
  align-self: center;
}
.hD{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 20rpx;
}
.hD>text{
  margin-top: 8rpx;
}
.hD>image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: yellow;
  display: inline-block;
}
.bodyPf>image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 4rpx;
}
.rightCnt{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.bodyPf{
  font-size: 26rpx;
  color: #ccc;
}
.bottomDw{
  font-size: 24rpx;
}
.bottomDw>text:last-child{
  float: right;
  margin-right: 20rpx;
}
.pinfen{
  color: #000;
  margin-right: 20rpx;
}
.shangjia{
  width: 500rpx;
  height: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}
.shangjia>image{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.shangjia>text{
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #1296db;
}


.sure{
  position: absolute;
  left: 20%;
  top: 300rpx;
  background: #fff;
  border: 1rpx solid #ccc;
  height: 300rpx;
  width: 60%;
  border-radius: 10rpx;
  z-index: 9999;
}
.bottoms{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  position: absolute;
  bottom: 20rpx;
}
.sure>text{
  display: block;
  width: 80%;
  margin: 50rpx auto 0;
  font-size: 26rpx;
  text-align: center;
}
.sure>image{
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  left: calc(50% - 64rpx);
  top: 40rpx;
}
button{
  width:30%;
  height:50rpx;
  font-size:22rpx;
  line-height:50rpx;
  margin-bottom:10rpx;
  display:inline-block;
  padding:0;
}
.sure>button:last-child{
  background: green;
  color: #fff;
}
.qM{
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  letter-spacing: 10rpx;
  padding-left: 40rpx;
}
.motai{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  position: fixed;
  left: 0;
  top: 0;
}
.close{
  float: right;
  display: inline-block;
  width: 40rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  background: #ccc;
  padding: 4rpx;
  letter-spacing: 0;
  border-bottom-left-radius: 20rpx;
  font-size: 16rpx;
}