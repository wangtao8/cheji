/* pages/lipei/index.wxss */
page{
  width: 100%;
  height: 100%;
  background: rgb(240,240,240);
}
.topCont{
  height: 740rpx;
  width: 100%;
  background: rgb(76,76,76);
  box-sizing: border-box;
  padding-top: 78rpx;
  position: relative;
}
.yuan{
  width: 500rpx;
  height: 500rpx;
  background: url('https://chejiqiche.com/video/notice/yuan.png') round;
  margin: 0 auto;
  position: relative;
}
.rmb{
  width: 50rpx;
  height: 70rpx;
  position: absolute;
  left: 225rpx;
  top: 88rpx;
}
.money{
  position: absolute;
  width: 500rpx;
  text-align: center;
  font-size: 100rpx;
  color: #fff;
  top: 176rpx;
}
.lipeiFont{
  width: 500rpx;
  text-align: center;
  font-size: 40rpx;
  color: rgb(230,230,230);
  position: absolute;
  bottom: 88rpx;
}
.btn{
  width: 168rpx;
  height: 58rpx;
  position: absolute;
  left: calc(50% - 84rpx);
  bottom: 52rpx;
}
.huodong{
  width: 100%;
  background: #fff;
  margin-top: 12rpx;
}
.huodong>view{
  width: 702rpx;
  height: 112rpx;
  margin-bottom: 10rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid rgb(230,230,230);
  box-sizing: border-box;
  padding-top: 12rpx;
}
.huodong>view:last-child{
  border-bottom: none;
}
.hD{
  font-size: 32rpx;
}
.hD>text{
  margin-top: 8rpx;
  display: inline-block;
  margin-left: 44rpx;
  font-size: 32rpx;
  color: rgb(51,51,51);
}
.icons{
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
  vertical-align: middle;
}
.icons:last-child{
  width: 70rpx;
  height: 70rpx;
}
.rights{
  width: 20rpx;
  height: 34rpx;
  float: right;
  margin-top: 24rpx;
}


