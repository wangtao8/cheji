page{
  width: 100%;
  height: 100%;
}
.searchView{
  width: 90%;
  height: 80rpx;
  /* border: 1rpx solid #ccc; */
  border-radius: 20rpx;
  margin: 0rpx auto;
  background: #fff;
}
.searchView>input{
  width: 80%;
  height: 100%;
  display: inline-block;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 50rpx;
}
.searchView>icon{
  width: 18%;
  height: 100%;
  float: right;
  padding-top: 24rpx;
  padding-left: 46rpx;
  box-sizing: border-box;
}
.orderView{
  width: 100%;
  height: 88rpx;
  background: #f3f3f3;
  padding: 20rpx 0rpx;
}
.unresult{
  width: 100%;
  height: 160rpx;
  position: relative;
  border-bottom: 1rpx solid #f3f3f3;
  background: #fff;
}
.result{
  width: 100%;
  height: 160rpx;
  position: relative;
  border-bottom: 1rpx solid #f3f3f3;
  background: #ada2a2;
}
.address{
  display: inline-block;
  width: 90%;
  height: 100%;
  font-size: 28rpx;
  color: #ccc;
  padding: 35rpx;
  box-sizing: border-box;
}
.location{
  width: 42rpx;
  height: 46rpx;
  display: inline-block;
  position: absolute;
  right: calc(5% - 21rpx);
  top: calc(50% - 23rpx);
}
.allInfo{
  height: 40rpx;
  line-height: 40rpx;
}
.names{
  font-size: 36rpx;
  font-weight: 500;
  color: #000;
}
.recommend{
  display: inline-block;
  padding: 4rpx;
  background: #00b2dc;
  color: #fff;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.distance{
  float: right;
}
.addressInfo{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 10rpx;
}
.undefine{
  font-size: 32rpx;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #f3f3f3;
  margin: 20rpx auto;
  letter-spacing: 30rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  background: #f3f3f3;
  border-radius: 8rpx;
  color: #ccc;
}
.define{
  font-size: 32rpx;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #f3f3f3;
  margin: 20rpx auto;
  letter-spacing: 30rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  background: #fff;
  border-radius: 8rpx;
  color: #403d3d;
}
.goNext{
  font-size: 32rpx;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #f3f3f3;
  margin: 20rpx auto;
  letter-spacing: 30rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  background: #467de4;
  color: #fff;
  border-radius: 8rpx;
}