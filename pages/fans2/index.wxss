  top: 20rpx;
}
.fansNameAndMoney{
  height: 134rpx;
  border-bottom: 1rpx solid rgb(240,240,240);
}
.fansName{
  width: calc(100% - 130rpx);
  height: 100%;
  float: left;
  position: relative;
}
.fansName>image{
  width: 102rpx;
  height: 102rpx;
  border-radius: 62rpx;
  position: absolute;
  top: 16rpx;
  left: 20rpx;
  background: skyblue;
}
.fansName>view{
  width: calc(100% - 156rpx);
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  box-sizing: border-box;
