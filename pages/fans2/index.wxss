/* pages/fans/index.wxss */
page{
  width: 100%;
  height: 100%;
  background: rgb(240,240,240);
  /* overflow: hidden; */
}
.nav{
  width: 100%;
  height: 460rpx;
  /* background: url('https://chejiqiche.com/video/notice/true.jpg') round; */
  background: rgb(237,68,68);
  box-sizing: border-box;
  padding: 60rpx 0 0 24rpx;
  position: relative;
}
.userInfo{
  width: 558rpx;
  height: 150rpx;
  position: relative;
  box-sizing: border-box;
  padding-top: 10rpx;
}
.userPhone{
  width: 132rpx;
  height: 132rpx;
  border-radius: 62rpx;
  /* background: pink; */
}
.userInfoRight{
  width: calc(100% - 172rpx);
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  color: rgb(255,255,255);
  text-shadow:0rpx 1rpx 10rpx rgb(0,0,0);
  /* background: rgba(0,0,0,.3); */
}
.userName{
  font-size: 30rpx;
  margin-top: 28rpx;
}
.signature{
  font-size: 24rpx;
  margin-top: 24rpx;
}
.erWeiMa{
  height: 140rpx;
  width: 120rpx;
  position: absolute;
  right: 24rpx;
  top: 48rpx;
}
.erWeiMa>view{
  font-size: 18rpx;
  text-align: center;
  color: rgb(77,76,74);
}
.MoneyShow{
  width: 702rpx;
  height: 232rpx;
  background: #fff;
  /* margin: -78rpx auto 0; */
  /* border-radius: 9rpx; */
  border-top-left-radius: 9rpx;
  border-top-right-radius: 9rpx;
  position: relative;
  left: -2rpx;
  top: 20rpx;
  z-index: 2;
  /* border: 1rpx solid rgb(240,240,240); */
  /* box-shadow: -1rpx 2rpx 12rpx rgba(0,0,0,.2); */
}
.elTop{
  width: 100%;
  height: 148rpx;
  /* background: yellow; */
  /* border-bottom: 1rpx dashed rgb(238,238,238);  */
}
.elBottom{
  width: 100%;
  height: calc(100% - 148rpx);
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  position: relative;
  top: -10rpx;
}
.elTop>view{
  width: 190rpx;
  display: inline-block;
}
.elTop>view:first-child{
  width: calc(50% - 1rpx);
  height: 100%;
  /* border-right: 1rpx dashed rgb(238,238,238); */
}
.elTop_left, .elTop_right{
  box-sizing: border-box;
  height: 100%;
  padding: 12rpx 0rpx 12rpx 12rpx;
}
.elTop_left>image, .elTop_right>image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 22rpx;
}
.elTop_left>text, .elTop_right>text{
  font-size: 26rpx;
  color: rgb(102,102,102);
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
  position: relative;
  top: -10rpx;
}
.elTop_left>view{
  width: 256rpx;
  font-size: 48rpx;
  text-align: center;
  color: rgb(44,87,214);
  margin-top: -10rpx;
}
/* .elBottom_left>view{
  height: 24rpx;
} */
.elBottom>view>view:first-child{
  font-size: 24rpx;
  color: rgb(102,102,102);
}
.elBottom>view>view:last-child{
  font-size: 36rpx;
  color: rgb(44,87,214);
}
.elBottom>view{
  width: 33%;
  height: 100%;
  display: inline-block;
  text-align: center;
  /* line-height: 160rpx; */
  font-size: 24rpx;
  border-right: 2rpx solid rgb(240,240,240);
}
.elBottom>.elBottom_right{
  border: none;
}
