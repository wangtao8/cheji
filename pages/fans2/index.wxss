}
.nickName{
  font-size: 24rpx;
  color: rgb(51,51,51);
}
.elTime{
  font-size: 20rpx;
  color: rgb(153,153,153);
  margin-top: 20rpx;
}
.fansMoney{
  width: 130rpx;
  height: 100%;
  float: right;
  font-size: 28rpx;
  line-height: 134rpx;
  color: rgb(231,31,31);
  box-sizing: border-box;
  padding-left: 14rpx;
  /* font-weight: bold; */
}
.fansMoney>text:last-child{
  font-size: 32rpx;
}
.noFans{
  position: relative;
  top: 80rpx;
}
.noFans>image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  /* background: red; */
}
.noFans>text{
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
}
.optionNav{
  width: 702rpx;
  height: 174rpx;
  background: #fff;
  margin: 24rpx auto;
  border-radius: 8rpx;
  display: flex;
