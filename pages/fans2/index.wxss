.navInfo{
  display: inline-block;
  width: 100rpx;
  height: 144rpx;
  /* background: yellow; */
}
.navInfo>image{
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  /* background: greenyellow; */
}
.navInfo>view{
  font-size: 20rpx;
  color: rgb(102,102,102);
  width: 100rpx;
  text-align: center;
  margin-top: 10rpx;
}