/* pages/recharge/index.wxss */
.recharge{
  font-size: 28rpx;
  color: rgb(102,102,102);
  width: 702rpx;
  margin: 24rpx auto;
  font-weight: bold;
}
.wirteMoney{
  width: 700rpx;
  height: 74rpx;
  border: 1rpx solid rgb(204,204,204);
  border-radius: 8rpx;
  color: rgb(102,102,102);
  margin: 0 auto;
}
.wirteMoney>input{
  width: 90%;
  height: 100%;
  display: inline-block;
  box-sizing: border-box;
  padding-left: 24rpx;
  font-size: 48rpx;
}
.wirteMoney>text{
  display: inline-block;
  width: 10%;
  height: 100%;
  text-align: center;
  line-height: 74rpx;
  font-size: 40rpx;
  float: right;
}
.chooseMoneys{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  width: 720rpx;
  margin: 24rpx auto;
}
.chooseMoneys>view{
  width: 160rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  font-size: 36rpx;
  color: rgb(102,102,102);
  display: inline-block;
  border: 1rpx solid rgb(204,204,204);
  border-radius: 8rpx;
}
.blank16{
  height: 16rpx;
  background: rgb(240,240,240);
}
