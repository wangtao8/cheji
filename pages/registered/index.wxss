/* pages/registered/index.wxss */
page{
  width: 100%;
  height: 100%;
  background: rgb(240,240,240);
}
.logining {
  height: 500rpx;
  line-height: 50rpx;
  position: relative;
  background: url('https://chejiqiche.com/video/notice/bg.png') round;
  /* margin: 40rpx 0rpx; */
}
.logining>image {
  width: 206rpx;
  height: 186rpx;
  position: absolute;
  bottom: 128rpx;
  left: 272rpx;
}
.register{
  width: 100%;
  height: calc(100% - 500rpx);
  position: relative;
  font-size: 32rpx;
  color: rgb(51,51,51);
  display: block;
}
.userInfo{
  position: absolute;
  top: 140rpx;
  left: calc(50% - 260rpx);
  width: 520rpx;
  height: 50rpx;
}
.userInfo2{
  position: absolute;
  top: 220rpx;
  left: calc(50% - 260rpx);
  width: 520rpx;
  height: 50rpx;
}
.userInfo3{
  position: absolute;
  top: 300rpx;
  left: calc(50% - 260rpx);
  width: 520rpx;
  height: 50rpx;
}
.userInfo>image,.userInfo2>image,.userInfo3>image{
  width: 50rpx;
  height: 50rpx;
  float: left;
}
.userInfo>input,.userInfo2>input,.userInfo3>picker{
  width: 408rpx;
  height: 100%;
  float: right;
  border-bottom: 1rpx solid rgb(153,153,153);
}
.picker{
  width: 100%;
  height: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.btn{
  width: 520rpx;
  height: 100rpx;
  font-size: 48rpx;
  color: rgb(255,255,255);
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: rgb(237,124,4);
  position: absolute;
  bottom: 100rpx;
  left: calc(50% - 260rpx);
}
.renzhen{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  opacity: 0;
}