/* pages/mySubmit/index.wxss */
page{
  /* padding: 0rpx 20rpx; */
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* background: rgb(240,240,240); */
}
.sGoder{
  padding: 0 20rpx;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}


.xX{
  position:relative;
  /* height:80rpx; */
  padding:0 24rpx;
  /* border-bottom:1rpx dashed #fff; */
  font-size:24rpx;
  background:#fff;
  margin:20rpx 0;
  border-radius:8rpx;
  box-shadow: 0rpx 2rpx 14rpx 0rpx rgba(0, 0, 0, .1);
}
.xXx{
  position:relative;
  height:80rpx;
  padding:20rpx 24rpx;
  border-bottom:1rpx dashed #fff;
  font-size:24rpx;
  background:#fff;
  margin:20rpx 0;
  border-radius:8rpx;
  box-shadow: 0rpx 2rpx 14rpx 0rpx rgba(0, 0, 0, .1);
}
.xX>image, .xXx>image{
  /* border-radius: 30rpx;
  line-height: 60rpx; */
  /* margin-left: 10rpx; */
  /* vertical-align: middle;
  margin-top: 10rpx; */
}
.xXx>text{
  display: inline-block;
  width: calc(100% - 120rpx);
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  /* position: absolute;
  left: 100rpx;
  top: 20rpx; */
  border-bottom: 1rpx solid #f3f3f3;
  text-indent: 24rpx;
  padding-right: 30rpx;
