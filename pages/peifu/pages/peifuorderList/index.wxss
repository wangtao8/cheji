/* pages/peifuorderList/index.wxss */
page{
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  /* background: rgb(240,240,240); */
}
.sGoder{
  padding: 0 20rpx;
}
.xXx,.xX{
  position: relative;
  height: 80rpx;
  padding: 20rpx 0rpx;
  /* border-bottom: 1rpx dashed #f3f3f3; */
  font-size: 24rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0rpx 2rpx 14rpx 0rpx rgba(0, 0, 0, .1);
}
.xXx>image{
  /* border-radius: 30rpx;
  line-height: 60rpx; */
  /* margin-left: 10rpx; */
  /* vertical-align: middle;
  margin-top: 10rpx; */
}
.xXx>text, .xX>text{
  display: inline-block;
  width: calc(100% - 120rpx);
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  /* position: absolute;
  left: 100rpx;
  top: 20rpx; */
  border-bottom: 1rpx solid #f3f3f3;
  text-indent: 24rpx;
  padding-right: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.xXx>.biaoji, .xX>.biaoji{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 10rpx;
  padding: 0;
  position: absolute;
  right: 50rpx;
  top: 50rpx;
}
.xXx>image:last-child,.xX>image:last-child{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 10rpx;
  top: 42rpx;
}
.xXx>view.zhuangtai, .xX>view.zhuangtai{
  display: inline-block;
  position: absolute;
  right: 50rpx;
  top: 38rpx;
  color: red;
  font-size: 26rpx;
  padding: 0;
  margin: 0;
}
.xXx> .isOk{
  width: 36rpx;
  height: 80rpx;
  position: absolute;
  left: -44rpx;
  top: 0rpx;
  background: rgb(237,124,4);
  color: #fff;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 40rpx;
  font-size: 20rpx;
}
.xXx> .isNo{
  width: 36rpx;
  height: 80rpx;
  position: absolute;
  left: -44rpx;
  top: 0rpx;
  background: rgb(204,204,204);
  color: #fff;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 40rpx;
  font-size: 20rpx;
}
.orderInfo>view:first-child{
  margin-bottom: 20rpx;
}
.xXx>view{
  font-size: 24rpx;
  margin-top: 10rpx;
  width: 60%;
  margin-left: 40rpx;
  display: inline-block;
}
.xX>view{
  font-size: 24rpx;
  margin-top: 10rpx;
  width: 80%;
  margin-left: 40rpx;
  display: inline-block;
}
.xXx>view:nth-child(3), .xX>view:nth-child(3){
  width: initial;
  margin-left: initial;
}
.xXx>view:nth-child(2){
  width: 60%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin-left: 70rpx;
  margin-top: -2rpx;
}
 .xX>view:nth-child(1){
    width: 80%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin-top: -2rpx;
  }
.tishi{
  font-size: 26rpx;
  text-align: center;
  height: 600rpx;
  line-height: 600rpx;
  color: rgb(102,102,102);
  text-shadow: -1rpx 1rpx #fff,1rpx 1rpx #fff;
}