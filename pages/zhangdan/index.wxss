/* pages/zhangdan/index.wxss */
page{
  width: 100%;
  height: 100%;
  background: rgb(240,240,240);
}
.topCont{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 25rpx 24rpx;
  background: #fff;
}
.topTime{
  color: rgb(102,102,102);
  font-size: 30rpx;
  display: inline-block;
}
.topTime>text{
  font-size: 48rpx;
  color: rgb(237,124,4);
}
.topImg{
  width: 50rpx;
  height: 50rpx;
  float: right;
  
}
.cont{
  width: 100%;
  height: 110rpx;
  box-sizing: border-box;
  padding: 12rpx 24rpx 24rpx;
  font-size: 22rpx;
  color: rgb(102,102,102);
  border-bottom: 1rpx solid rgb(240,240,240);
}
.centerCont{
  background: #fff;
  margin-top: 16rpx;
}
.centerTime{
  display: inline-block;
  margin-right: 78rpx;
}
.centerTime>view:first-child{
  font-size: 32rpx;
}
.shouru{
  width: 62rpx;
  height: 64rpx;
  display: inline-block;
  margin-right: 200rpx;
}
.centerMoney{
  display: inline-block;
  text-align: center;
}
.centerMoney>view:nth-child(1){
  color: rgb(52,52,52);
  font-size: 38rpx;
}
.goAddMoney{
  width: 62rpx;
  height: 100%;
  font-size: 18rpx;
  text-align: center;
  color: rgb(77,77,77);
  float: right;
}
.goAddMoney>image{
  width: 52rpx;
  height: 38rpx;
}
.goAddMoney>text{
  margin-left: 8rpx;
  margin-top: 14rpx;
}
.noCont{
  width: 100%;
  height: 600rpx;
  font-size: 32rpx;
  text-align: center;
  position: relative;
}
.noCont>text{
  width: 188rpx;
  height: 188rpx;
  display: inline-block;
  position: absolute;
  left: calc(50% - 99rpx);
  top: 100rpx;
  font-size: 188rpx;
  line-height: 168rpx;
  color: yellowgreen;
}
.noCont>view{
  width: 100%;
  height: 100%;
  line-height: 800rpx;
}