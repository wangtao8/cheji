/* pages/peifuAllOrder/index.wxss */
page{
  width: 100%;
  height: 100%;
  background: rgb(240,240,240);
}
.navbar{
  width: 100%;
  /* flex: none; */
  background: #fff;
  white-space: nowrap;
  padding: 30rpx 0 0rpx;
}
.navbar .item{
  display: inline-block;
  margin-left: 60rpx;
  font-size: 28rpx;
  color: rgb(128,128,128);
  position: relative;
  padding-bottom: 30rpx;
}
.navbar .item:first-child{
  margin-left: 24rpx;
}
.navbar .item:last-child{
  margin-right: 60rpx;
}
.navbar .item.active{
  color: rgb(237,124,4);
}
.navbar .item.active::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: -4rpx;
  right: 0rpx;
  width: 90rpx;
  height: 4rpx;
  background: rgb(237,124,4);
}
.navbar .item:first-child.active::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: -18rpx;
  right: 0rpx;
  width: 90rpx;
  height: 4rpx;
  background: rgb(237,124,4);
}

.orderInfo{
  width: 702rpx;
  height: 294rpx;
  border-radius: 10rpx;
  background: rgb(255,255,255);
  margin: 24rpx;
  font-size: 22rpx;
  box-sizing: border-box;
  padding: 16rpx;
  position: relative;
}
.orderNum{
  font-size: 26rpx;
  color: rgb(128,128,128);
}
.orderStaus{
  float: right;
  font-size: 24rpx;
  color: rgb(237,124,4);
  border: 1rpx solid rgb(237,124,4);
  margin-right: 20rpx;
}
.botOrderInfo{
  position: relative;
  margin-top: 24rpx;
  left: 16rpx;
  width: calc(100% - 32rpx);
  height: 178rpx;
}
.botLetImg{
  width: 178rpx;
  height: 178rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgb(240,240,240);
  /* background: greenyellow; */
}
.botRightCont{
  /* width: calc(100% - 186rpx); */
  width: calc(100% - 220rpx);
  height: 100%;
  float: right;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-around;
  /* position: relative; */
  overflow-x: hidden;
  position: absolute;
  right: 0;
  top: 0;
}
.botTopCont{
  height: 28rpx;
  /* line-height: 28rpx; */
  margin-top: 10rpx;
}
.foursName{
  color: rgb(51,51,51);
  display: inline-block;
  width: 250rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 32rpx;
}
.orIsMoney{
  font-size: 28rpx;
  color: rgb(241,33,33);
  float: right;
}
.isAddres{
  width: 330rpx;
  font-size: 24rpx;
  color: rgb(102,102,102);
  margin-top: 44rpx;
}
.allStaus{
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 9999;
}
.allStaus>text{
  display: inline-block;
  /* width: 80rpx; */
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  border-radius: 20rpx;
  float: right;
  padding: 0 8rpx;
}
.allStaus .isOk{
  /* margin-right: 46rpx; */
  border: 1rpx solid rgb(57,228,38);
  color: rgb(57,228,38);
}
.allStaus .isNo{
  border: 1rpx solid rgb(17,184,232);
  color: rgb(17,184,232);
}
.noCont{
  width: 100%;
  height: 600rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 600rpx;
  color: rgb(102,102,102);
  text-shadow: -1rpx 1rpx #fff,1rpx 1rpx #fff;
}
.names{
  width: 100%;
  height: 178rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
  background: #fff;
  transition:left 0.2s ease-in-out;
}
.deleteThis{
  width: 100rpx;
  height: 178rpx;
  position: absolute;
  background-color: #e64340;
  text-align: center;
  z-index: 4;
  right: 0;
  top: 0;
  font-size: 30rpx;
  line-height: 178rpx;
  color: #fff;
}