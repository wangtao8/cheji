.huodong{
  width: 100%;
  background: #fff;
  /* margin-top: 12rpx; */
  height: 426rpx;
  background: rgb(240,240,240);
  box-sizing: border-box;
  padding: 42rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.huodong>view{
  width: 24%;
  height: 144rpx;
  margin-bottom: 40rpx;
  text-align: center;
}
.huodong>view:last-child{
  border-bottom: none;
}
.hD{
  font-size: 32rpx;
  position: relative;
}
.hD>text{
  display: inline-block;
  font-size: 24rpx;
  width: 100%;
  text-align: center;
  color: rgb(51,51,51);
  margin-top: 24rpx;
}
.hD>.nums{
  display:block;
  width:36rpx;
  height:36rpx;
  text-align:center;
  line-height:36rpx;
  border-radius:18rpx;
  position:absolute;
  right:10rpx;
  top:-30rpx;
  color:#fff;
  background:red;
  font-size:20rpx;
}
.icons{
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
  vertical-align: middle;
}
.icons:last-child{
  width: 70rpx;
  height: 70rpx;
}
.rights{
  width: 20rpx;
  height: 34rpx;
